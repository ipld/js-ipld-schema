{
  "name": "ipld-schema",
  "version": "0.4.0",
  "description": "IPLD Schema parser and utilities for JavaScript",
  "main": "./ipld-schema.js",
  "scripts": {
    "peg": "pegjs -o parser.js ipld-schema.pegjs",
    "lint": "standard *.js test/*.js bin/*.js",
    "test": "npm run lint && tap test/*-test.js --cov",
    "coverage": "tap test/*-test.js --cov --coverage-report=html"
  },
  "bin": {
    "ipld-schema": "bin/cli.js"
  },
  "author": "Rod <r@va.gg> (http://r.va.gg/)",
  "license": "Apache-2.0",
  "devDependencies": {
    "js-yaml": "~3.13.1",
    "pegjs": "~0.10.0",
    "standard": "~16.0.3",
    "tap": "~14.6.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rvagg/js-ipld-schema.git"
  },
  "dependencies": {
    "@sindresorhus/is": "~1.0.0",
    "get-stdin": "^7.0.0",
    "yargs": "^14.0.0"
  },
  "standard": {
    "ignore": [
      "parser.js"
    ]
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "revert": true,
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "chore",
                "section": "Trivial Changes"
              },
              {
                "type": "docs",
                "section": "Trivial Changes"
              },
              {
                "type": "test",
                "section": "Tests"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  }
}