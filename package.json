{
  "name": "@ipld/schema",
  "version": "4.0.1",
  "description": "IPLD Schema parser and CLI utilities for JavaScript",
  "main": "./ipld-schema.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:types",
    "build:types": "tsc --build",
    "prepublishOnly": "npm run build",
    "peg": "echo '// @ts-nocheck' > lib/parser.cjs && npm_config_yes=true npx pegjs -o tmp.cjs ipld-schema.pegjs && cat tmp.cjs >> lib/parser.cjs && rm tmp.cjs",
    "lint": "standard",
    "test:node": "c8 --check-coverage --exclude=lib/parser.cjs --exclude=test/** mocha test/test-*.js",
    "test:browser": "polendina --cleanup --webpack-config test/webpack.config.js test/test-typed-*.js",
    "test": "npm run lint && npm run build && npm run test:node && npm run test:browser",
    "coverage": "c8 --reporter=html --reporter=text mocha test/test-*.js && npx st -d coverage -p 8888"
  },
  "exports": {
    "./to-dsl.js": {
      "import": "./lib/to-dsl.js"
    },
    "./bin/collect-input.js": {
      "import": "./bin/collect-input.js"
    },
    "./from-dsl.js": {
      "import": "./lib/from-dsl.js"
    },
    "./typed.js": {
      "import": "./lib/typed.js"
    }
  },
  "bin": {
    "ipld-schema": "bin/cli.js"
  },
  "author": "Rod <r@va.gg> (http://r.va.gg/)",
  "license": "(Apache-2.0 AND MIT)",
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.3",
    "c8": "^7.12.0",
    "chai": "^4.3.4",
    "js-yaml": "^4.1.0",
    "mocha": "^10.0.0",
    "polendina": "^3.1.0",
    "standard": "^17.0.0",
    "typescript": "^4.7.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rvagg/js-ipld-schema.git"
  },
  "dependencies": {
    "@types/yargs": "^17.0.11",
    "get-stdin": "^9.0.0",
    "yargs": "^17.5.1"
  },
  "standard": {
    "ignore": [
      "parser.cjs"
    ]
  },
  "typesVersions": {
    "*": {
      "./to-dsl.js": [
        "./lib/to-dsl.js"
      ],
      "./bin/collect-input.js": [
        "./bin/collect-input.js"
      ],
      "./from-dsl.js": [
        "./lib/from-dsl.js"
      ],
      "./typed.js": [
        "./lib/typed.js"
      ],
      "*": [
        "types/*"
      ],
      "types/*": [
        "types/*"
      ]
    }
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "revert": true,
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "chore",
                "section": "Trivial Changes"
              },
              {
                "type": "docs",
                "section": "Trivial Changes"
              },
              {
                "type": "test",
                "section": "Tests"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  }
}
